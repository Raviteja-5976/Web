 <!-- <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Traffic Lights with Timer</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #2e2749;
            margin: 0;
        }
        .lq{
            text-align: center;
            font-family: Arial, sans-serif;
            color: #ffffff;
            margin-top: 0;
            
        }
        .traffic-light {
            width: 100px;
            background-color: #333;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }
        .light {
            width: 60px;
            height: 60px;
            background-color: #111;
            margin: 15px auto;
            border-radius: 50%;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5);
        }
        .red.active {
            background-color: red;
        }
        .yellow.active {
            background-color: yellow;
        }
        .green.active {
            background-color: green;
        }

    </style>
</head>
<body>

<div class="lq">
    <h1>Traffic Lights with Timer</h1>
</div>

<div class="traffic-light">
    <div class="light red"></div>
    <div class="light yellow"></div>
    <div class="light green"></div>
</div>

<script>
    let currentLight = 0;
    const lights = document.querySelectorAll('.light');
    const timings = [2000, 500, 500, 2000]; // Red, Yellow, Green, Yellow

    function changeLight() {
        lights.forEach((light, index) => {
            light.classList.remove('active');
            if (index === currentLight) {
                light.classList.add('active');
            }
        });

        currentLight = (currentLight + 1) % lights.length;

        if (currentLight === 1) {
            setTimeout(changeLight, timings[1]); // Yellow after Red
        } else if (currentLight === 2) {
            setTimeout(changeLight, timings[2]); // Green after Yellow
        } else if (currentLight === 3) {
            setTimeout(changeLight, timings[3]); // Yellow after Green
        } else {
            setTimeout(changeLight, timings[0]); // Red after Yellow
        }
    }

    // Start the traffic light cycle
    changeLight();
</script>

</body>
</html>
 -->